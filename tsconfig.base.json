{
	"compileOnSave": false,
	"compilerOptions": {
		"rootDir": ".",
		"sourceMap": true,
		"strict": false,
		"declaration": false,
		"moduleResolution": "node",
		"strictPropertyInitialization": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"target": "es2021",
		"module": "ES2022",
		"lib": [
			"es2021",
			"dom"
		],
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@booknex/global/*": [
				"libs/global/*"
			],
			"@booknex/ui/react": [
				"libs/ui/react/index.ts"
			],
			"@booknex/ui/react-native": [
				"libs/ui/react-native/src/index.ts"
			],
			"@booknex/ui/*": [
				"libs/ui/*"
			]
		}
	},
	"exclude": [
		"node_modules",
		"tmp"
	]
}
