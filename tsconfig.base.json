{
	"compileOnSave": false,
	"compilerOptions": {
		"rootDir": ".",
		"sourceMap": true,
		"declaration": true,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"experimentalDecorators": true,
		"lib": ["es2021", "dom"],
		"target": "es2021",
		"module": "ES2022",
		"baseUrl": ".",
	},
	"exclude": ["node_modules", "tmp"]
}
