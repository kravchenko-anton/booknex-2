{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    //TODO: сделать стрик true и пофиксить всё ошибки обложив всё типами
    "strict": true,
    "strictPropertyInitialization": false,
    "strictNullChecks": false,
    "outDir": "../../dist/out-tsc",
    "module": "ES2022",
    "types": [
      "node",
      "express",
      "multer"
    ],
    "target": "es2021"
  },
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ],
  "include": [
    "src/**/*.ts",
  ]
}
