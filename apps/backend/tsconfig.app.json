{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"isolatedModules": false,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"strictPropertyInitialization": false,
		"sourceMap": true,
		"noEmit": true,
		"incremental": true,
		"moduleResolution": "node",
		"outDir": "./dist",
		"baseUrl": ".",
		"types": [
			"node",
			"express",
			"multer"
		],
		"target": "es2021"
	},
	"exclude": [
		"jest.config.ts",
		"src/**/*.spec.ts",
		"src/**/*.test.ts",
		"../../node_modules"
	],
	"include": [
		"src/**/*.ts"
	]
}
