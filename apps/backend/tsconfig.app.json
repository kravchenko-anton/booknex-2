{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"isolatedModules": true,
		"emitDecoratorMetadata": true,
		"strict": false,
		"esModuleInterop": true,
		"noImplicitAny": false,
		"moduleResolution": "node",
		"sourceMap": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"outDir": "./dist",
		"baseUrl": ".",
		"skipLibCheck": true,
		"types": [
			"node",
			"express",
			"multer"
		],
		"target": "es2021"
	},
	"exclude": [
		"jest.config.ts",
		"src/**/*.spec.ts",
		"src/**/*.test.ts"
	],
	"include": [
		"src/**/*.ts"
	]
}
