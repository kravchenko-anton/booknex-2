{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"outDir": "../../dist/out-tsc",
		"baseUrl": ".",
		"esModuleInterop": true,
		"allowJs": true,
		"strict": true,
		"strictNullChecks":false,
		"noEmit": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"paths": {
			"@/*": [
				"./src/*"
			],
			"icons": [
				"../../libs/global/icons/react-native/index.ts"
			],
			"global/*": [
				"../../libs/global/*"
			],
			"backend/*": [
				"../backend/*"
			]
		}
	},
	"exclude": [
		"jest.config.ts",
		"src/**/*.spec.ts",
		"src/**/*.spec.tsx",
		"test-setup.ts"
	],
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"**/*.js",
		"**/*.jsx",
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.js",
		"src/**/*.jsx",
		"../../libs/*"
	]
}
