{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"module": "esnext",
		"esModuleInterop": true,
		"isolatedModules": true,
		"baseUrl": ".",
		"jsx": "react-native",
		"lib": ["dom", "esnext"],
		"paths": {
			"@/*": [
				"./src/*"
			],
			"icons": [
				"../../libs/global/icons/react-native/index.ts"
			],
			"illustrations": [
				"../../libs/global/illustrations/react-native/index.ts"
			],
			"global/*": [
				"../../libs/global/*"
			],
			"backend/*": [
				"../backend/*"
			]
		}
	},
	"include": [
		"../../libs/**/*"
	],
	"references": [
		{
			"path": "./tsconfig.app.json"
		},
		{
			"path": "./tsconfig.spec.json"
		}
	]
}
