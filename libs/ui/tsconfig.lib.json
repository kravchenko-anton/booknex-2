{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"outDir": "../../dist/out-tsc",
		"declaration": true,
		"types": [
			"node",
			"@types/styled-components-react-native"
		]
	},
	"include": [
		"mobile/*",
		"web/*",
		"colors.ts",
		"ui-style.ts"
	],
	"exclude": [
		"jest.config.ts",
		"src/**/*.spec.ts",
		"src/**/*.test.ts"
	]
}
